
server {
    #listen 80;

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/mcxiaoke.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mcxiaoke.com/privkey.pem;

    server_name api.mcxiaoke.com;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_redirect     off;
        proxy_set_header   Host                 $http_host;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For      $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto    $scheme;
    }

}
